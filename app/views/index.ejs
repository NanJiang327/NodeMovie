<%- include('components/header.ejs') %>
    <div class="container">
        <div class="row">
            <% category.forEach(function (cate){ %>
              <div class="panel panel-danger">
                <div class="panel-heading">
                  <h3>
                    <a href="/result?cate=<%= cate._id %>&p=0"><%= cate.name %></a>
                  </h3>
                </div>
                <div class="panel-body">
                  <% if(cate.movies && cate.movies.length > 0){ %>
                    <% cate.movies.forEach(function (item){ %>
                      <div class="col-md-2">
                          <div class="thumbnail">
                              <a href="/movie/<%= item._id %>">
                                  <img src="<%= item.poster %>" alt="<%= item.title %>">
                              </a>
                              <div class="caption">
                                  <h3><%= item.title %></h3>
                                  <p><a href="/movie/<%= item._id %>"  role="button" class="btn btn-primary">Watch Preview</a></p>
                              </div>
                          </div>
                      </div>
                    <% }) %>
                  <% } %>
                </div>
              </div>
             <% }) %>
        </div>
    </div>
<%- include('components/footer.ejs') %>
